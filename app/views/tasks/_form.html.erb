<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= link_to 'general', tasks_path %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :task_name %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="field">
    <%= form.label :startdate %>
    <%= form.date_field :startdate %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, [['Not started', 'Not started'],['In progress', 'In progress'], ['Completed', 'Completed']] %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, [['high', 'high'],['medium', 'medium'], ['low', 'low']] %>
  </div>

  <div class=" row field ml-2">
    <%= form.label :Task_start, "Task starts: ", class:"mr-2"  %>
    <br>
    <%= form.date_select :startdate %>
  </div>
  <br>
  <div class="row field ml-2">
    <%= form.label :Task_end, "Task ends: ", class:"mr-2"  %>
    <%= form.date_select :end_at %>
  </div>
  <div class="actions text-center mt-4">
    <%= form.submit "Save", class:"btn btn-info " %>
  </div>
<% end %>
</div>
</div>
</div>
</div>
